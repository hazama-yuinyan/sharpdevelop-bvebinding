	Title="PositionShifter"
	WindowStartupLocation="CenterOwner"
	Style="{x:Static core:GlobalStyles.DialogWindowStyle}"
	Height="120"
	Width="450">
	<Grid
		Name="grid">
		<Grid.RowDefinitions>
			<RowDefinition
				Height="1*" />
			<RowDefinition
				Height="Auto" />
		</Grid.RowDefinitions>
		<!--<widgets:UniformGridWithSpacing Columns="2" Rows="2" Grid.Column="0" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
		</widgets:UniformGridWithSpacing>-->
		<Label
			Content="Amount of shift(in meters):"
