			Grid.ColumnSpan="2"
			Grid.Row="0"
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			Margin="8,8,0,0"
			Width="176"
			Height="28" />
		<TextBox
			Grid.Column="1"
			Grid.ColumnSpan="2"
