			Width="212.00000000000006"
			Height="20" />
		<Button
			Grid.Row="0"
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			Width="75"
			Height="23"
			Content="OK"
			Grid.Column="2"
			Margin="114.5,45,0,0" />
		<Button
			Grid.Row="0"
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			Width="75"
			Height="23"
			Content="Cancel"
			Grid.Column="2"
			Margin="30.5000000000002,45,0,0" />
		<Grid.ColumnDefinitions>
			<ColumnDefinition
				Width="0.332758620689655*" />
			<ColumnDefinition
				Width="0.168377742946709*" />
